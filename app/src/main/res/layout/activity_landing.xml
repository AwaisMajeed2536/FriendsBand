<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    tools:context="mehwish.ghazi.ui.LandingActivity">

    <ImageView
        android:layout_marginTop="35dp"
        android:id="@+id/app_logo"
        style="@style/app_logo" />

    <TextView
        android:id="@+id/center_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:text="or"
        android:textColor="@color/PRIMARY_BLUE_COLOUR"
        android:textSize="@dimen/activity_main_roundbutton_textsize" />

    <Button
        android:id="@+id/signup_with_email"
        style="@style/roundButton"
        android:layout_above="@+id/center_text"
        android:layout_marginBottom="5dp"
        android:textSize="@dimen/activity_main_roundbutton_textsize"
        android:background="@drawable/round_button_gray"
        android:gravity="center|center_vertical"
        android:text="Sign up with email"
        android:textColor="@color/PRIMARY_BLUE_COLOUR" />

    <Button
        android:id="@+id/signup_already"
        style="@style/roundButton"
        android:layout_below="@+id/center_text"
        android:layout_marginTop="5dp"
        android:background="@drawable/round_button_green"
        android:gravity="center|center_vertical"
        android:text="Already signed up? Log in here" />

</RelativeLayout>